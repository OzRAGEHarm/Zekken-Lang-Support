{
  "name": "Zekken Color Theme",
  "type": "dark",
  "colors": {
    "editor.background": "#1E1E1E",
    "editor.foreground": "#D4D4D4",
    "editorCursor.foreground": "#AEAFAD",
    "editor.lineHighlightBackground": "#2A2A2A",
    "editorLineNumber.foreground": "#5A5A5A",
    "editor.selectionBackground": "#264F78",
    "editor.selectionHighlightBackground": "#4E4E4E00",
    "editor.wordHighlightBackground": "#4E4E4E00",
    "editor.wordHighlightStrongBackground": "#4E4E4E00",
    "editorBracketMatch.background": "#3C3C3C",
    "editorBracketMatch.border": "#007ACC"
  },
  "tokenColors": [
    {
      "scope": "comment.line.double-slash.zekken",
      "settings": {
        "foreground": "#6A9955",
        "fontStyle": "italic"
      }
    },

    {
      "scope": "comment.block.zekken",
      "settings": {
        "foreground": "#6A9955",
        "fontStyle": "italic"
      }
    },
    
    {
      "scope": [
        "meta.function.declaration.zekken",
        "entity.name.function.zekken",
        "meta.function.call.zekken"
      ],
      "settings": {
        "foreground": "#DCDCAA"  // Light yellow for all function names
      }
    },

    {
      "scope": "meta.function.builtin.zekken support.function.builtin.zekken",
      "settings": {
        "foreground": "#569CD6"
      }
    },

    {
      "scope": "keyword.other.zekken",
      "settings": {
        "foreground": "#569CD6"  // Blue for all other keywords
      }
    },

    {
      "scope": "keyword.control.zekken",
      "settings": {
        "foreground": "#C678DD"  // Purple for control keywords
      }
    },

    {
      "scope": "keyword.operator.zekken",
      "settings": {
        "foreground": "#D4D4D4"  // Default text color for operators
      }
    },

    {
      "scope": "variable.other.zekken",
      "settings": {
        "foreground": "#9CDCFE"  // Light blue for variable names
      }
    },

    {
      "scope": "storage.type.zekken",
      "settings": {
        "foreground": "#4EC9B0"  // Teal-Cyan for data types
      }
    },

    {
      "scope": "constant.numeric.integer.zekken",
      "settings": {
        "foreground": "#B5CEA8"  // Light green for integers
      }
    },

    {
      "scope": "constant.numeric.float.zekken",
      "settings": {
        "foreground": "#B5CEA8"  // Light green for floats
      }
    },

    {
      "scope": "constant.language.boolean.zekken",
      "settings": {
        "foreground": "#569CD6"  // Blue for booleans
      }
    },

    {
      "scope": "string.quoted.double.zekken",
      "settings": {
        "foreground": "#CE9178"  // Light orange for double-quoted strings
      }
    },

    {
      "scope": "string.quoted.single.zekken",
      "settings": {
        "foreground": "#CE9178"  // Light orange for single-quoted strings
      }
    },
  ]
}